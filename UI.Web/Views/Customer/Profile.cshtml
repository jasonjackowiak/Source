@model UI.Web.Models.ViewModel.CustomerViewModel

@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Profile";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>This page will only be visible if you are logged in.</p>

@{Html.RenderAction("AccountCustomersPartial");}

<p>
    <ul>
@*@{Html.RenderAction("CustomerProjectsPartial");}*@
        <li>Select Existing Projects (from dropdown)</li>
    </ul>
</p>

<div>
    Want to add a new project?
    @Html.ActionLink("Create a new project", "Create", "Project", new { id = ViewBag.CustomerId }, "")<br />
    Or select an existing project
    @using (Html.BeginForm("CustomerProjectsPartial", "Customer"))
    {
        @Html.DropDownList("projectId", new SelectList(Model.CustomerProjects, "Id", "Name"))
        <button type="submit">View Snapshots</button>
    }


    @*@{ Html.RenderAction("CustomerProjectsListPartial", "Customer"); }*@
</div>



<p>
    Once project is selected, user can:
    <ul>
        <li>Select snapshot (dropdown)</li>
        <li>Create new snapshot (probably by selecting phase to run)</li>
    </ul>

</p>
